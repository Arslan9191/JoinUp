<Page x:Class="JoinUp.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:JoinUp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="199*"/>
            <ColumnDefinition Width="201*"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="createEvent" Margin="258,0,258,10" Height="32" VerticalAlignment="Bottom" Click="createEventButt" Grid.ColumnSpan="2">Создать мероприятие</Button>

        <TextBlock x:Name="flagText" Margin="10,0,199,70" Height="17" VerticalAlignment="Bottom">АЫААЫАЗЫАДЗЫАЫЗ</TextBlock>
        <TextBlock x:Name="nameUserr" Margin="10,0,157,46" Height="23" VerticalAlignment="Bottom">АЫААЫАЗЫАДgsgsgsgsgsgsЗЫАЫЗ</TextBlock>

        <DataGrid x:Name="eventsDataGrid" Margin="10,0,10,100" AutoGenerateColumns="True" Grid.ColumnSpan="2" Height="300" VerticalAlignment="Bottom" />
        <Button x:Name="openVisitButt" Content="Открыть посещение" HorizontalAlignment="Left" Margin="201,0,0,56" Grid.Column="1" Click="OpenVisit_Click" Width="150" Height="27" VerticalAlignment="Bottom"/>
        <Button x:Name="sendBidButt" Click="SendBitButton" Grid.Column="1" Content="Отправить заявку" HorizontalAlignment="Left" Margin="201,0,0,10" VerticalAlignment="Bottom" Height="28" Width="150"/>
        <Button x:Name="updateButt" Content="Обновить" Click="UpdateButtonClick" HorizontalAlignment="Left" Margin="70,0,0,12" VerticalAlignment="Bottom" Width="98"/>
        <Button x:Name="deleteEvent" Click="DeleteEventClick" Content="Удалить мероприятие" HorizontalAlignment="Left" Margin="27,0,0,56" VerticalAlignment="Bottom" Grid.Column="1" Width="144" Height="27"/>
    </Grid>
</Page>
